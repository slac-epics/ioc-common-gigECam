epicsEnvSet( "IMAGE_FTVL",			"UCHAR"		)
epicsEnvSet( "IMAGE_TYPE",			"Int8"		)
epicsEnvSet( "IMAGE_BIT_DEPTH",		"12"		)
epicsEnvSet( "IMAGE_XSIZE",			"1292"		)
epicsEnvSet( "IMAGE_YSIZE",			"964"		)
epicsEnvSet( "IMAGE_COLORMODE",		"1"			)	# 0=Mono,1=Bayer,2=RGB
epicsEnvSet( "IMAGE_NELM",			"3736464"	)	# X*Y (B/W) or X*Y*3 (Color)

# May not need these
epicsEnvSet( "BINNED_IMAGE_NELM",	"934116"	)   # IMAGE_NELM / 2 / 2
epicsEnvSet( "THUMBNAIL_NELM",		"233529" 	)   # IMAGE_NELM / 4 / 4

# Color camera uses 1 byte per pixel color, but allow
# for up to 4 bytes per pixel in case a plugin is
# set for mono and we have a 3.14.9 client
epicsEnvSet( "EPICS_CA_MAX_ARRAY_BYTES","6000000" )
